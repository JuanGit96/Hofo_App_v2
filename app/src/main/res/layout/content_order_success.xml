<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderSuccessActivity"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:padding="30dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_order_success">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Tipo de pago"/>


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/exito1"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/titulo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mensaje1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mensaje2"
        android:textAlignment="center"
        android:textSize="17dp"
        android:layout_marginBottom="25dp"
        />


    <Button
        android:id="@+id/volver"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="ir a mis pedidos"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:onClick="goToBack"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center"/>


    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Si quieres conocer el estado del
pedido comunÃ­cate por Whatsapp"
        android:gravity="right"
        android:paddingLeft="30dp"/>

</LinearLayout>