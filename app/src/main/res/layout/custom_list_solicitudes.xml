<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/orderClick">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del plato:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/nameMenuChef"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:clickable="true"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">


                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/viewMenuChef"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/imagen_predeterminada" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum"
                    android:textSize="10dp"
                    android:id="@+id/observacionesMenuChef"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Numero de personas: "
                        android:textSize="10dp"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="1"
                        android:textSize="10dp"
                        android:id="@+id/numeroDePersonas"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_aceptar"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginRight="15dp"
                        android:text="Aceptar"/>

                    <Button
                        android:id="@+id/btn_rechazar"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/cardview_light_background"
                        android:text="Rechazar"/>

                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACEPTADO"
                    android:textSize="20sp"
                    android:id="@+id/statusOrder"/>


                <TextView
                    android:id="@+id/ident_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=""
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/ident_chef"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=""
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/price_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=""
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/sale_price"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=""
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/imageMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=""
                    android:visibility="invisible"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>





</RelativeLayout>